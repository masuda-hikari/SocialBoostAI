# SocialBoostAI 環境変数設定
# このファイルを .env にコピーして、実際の値を設定してください

# ===========================================
# アプリケーション設定（必須）
# ===========================================
# ランダムな文字列を生成: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here_change_in_production

# 本番環境ではfalseに設定
DEBUG=true
REPORTS_DIR=./reports

# 本番環境ではドメインを指定（CORS用）
# ALLOWED_ORIGINS=https://socialboost.ai,https://www.socialboost.ai

# ===========================================
# データベース設定（必須）
# ===========================================
# SQLite (開発用)
DATABASE_URL=sqlite:///./socialboost.db

# PostgreSQL (本番用) - Docker Compose使用時は自動設定
# DATABASE_URL=postgresql://user:password@localhost:5432/socialboost

# PostgreSQL認証情報（Docker Compose用）
POSTGRES_USER=socialboost
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=socialboost

# ===========================================
# Redis設定（本番環境で必須）
# ===========================================
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# Twitter API v2
# ===========================================
# https://developer.twitter.com/ でアプリを作成
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# ===========================================
# Instagram Graph API
# ===========================================
# https://developers.facebook.com/ でアプリを作成
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_business_account_id_here

# ===========================================
# TikTok API for Business
# ===========================================
# https://developers.tiktok.com/ でアプリを作成
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# ===========================================
# YouTube Data API v3
# ===========================================
# https://console.cloud.google.com/ でAPIキーを作成
YOUTUBE_API_KEY=your_youtube_api_key_here

# ===========================================
# LinkedIn Marketing API
# ===========================================
# https://developer.linkedin.com/ でアプリを作成
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# ===========================================
# OpenAI API (AIコンテンツ生成用)
# ===========================================
# https://platform.openai.com/ でAPIキーを作成
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Stripe課金設定（本番環境で必須）
# ===========================================
# https://dashboard.stripe.com/ で取得
# テスト環境: sk_test_xxx, 本番環境: sk_live_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# 料金プランID（Stripeダッシュボードで作成）
STRIPE_PRICE_PRO=price_xxx
STRIPE_PRICE_BUSINESS=price_xxx
STRIPE_PRICE_ENTERPRISE=price_xxx

# ===========================================
# ドメイン設定（本番環境で必須）
# ===========================================
DOMAIN=socialboost.ai
VITE_API_URL=https://api.socialboost.ai

# ===========================================
# セキュリティ設定（オプション）
# ===========================================
# レート制限を有効化（本番環境ではtrue推奨）
RATE_LIMIT_ENABLED=true

# CSRF保護を有効化（本番環境ではtrue推奨）
CSRF_ENABLED=true

# CSRFシークレット（SECRET_KEYと異なる値を推奨）
# CSRF_SECRET=your_csrf_secret_here

# 本番環境設定（production/development）
ENVIRONMENT=development

# ===========================================
# ログ設定（オプション）
# ===========================================
# ログレベル（DEBUG/INFO/WARNING/ERROR/CRITICAL）
LOG_LEVEL=INFO

# ログ形式（auto/json/text）- autoは本番でJSON、開発でテキスト
LOG_FORMAT=auto

# ===========================================
# メール通知設定（オプション）
# ===========================================
# SMTPサーバー設定（SendGrid, Amazon SES, Mailgun等に対応）
# 設定しない場合、メール通知機能は無効になります
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@socialboost.ai
FROM_NAME=SocialBoostAI
# TLS接続を使用（通常はtrue）
SMTP_USE_TLS=true
# SSL接続を使用（ポート465の場合はtrue）
SMTP_USE_SSL=false

# ===========================================
# プッシュ通知設定（オプション）
# ===========================================
# VAPID鍵の生成: npx web-push generate-vapid-keys
# または python -c "from py_vapid import Vapid; v = Vapid(); v.generate_keys(); print('Public:', v.public_key.urlsafe_b64); print('Private:', v.private_key.urlsafe_b64)"
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:admin@socialboost.ai

# ===========================================
# バックアップ設定（オプション）
# ===========================================
# バックアップファイルの保存ディレクトリ
BACKUP_DIR=./backups
# バックアップの保持期間（日数）- この期間を超えたファイルは自動削除対象
BACKUP_RETENTION_DAYS=30
